<div class="text-center mt-5">
  <h1><%= @user.name %>さんのマイページ</h1>
</div>
<div class="container">
  <div class="row">
    <div class="col-lg-2">
      <!--ユーザー情報表示部分-->
      <% if @user.profile_image.attached? %>
        <%= image_tag @user.profile_image, size:"100x100" %>
      <% else %>
        <%= image_tag "no_image.jpg" %>
      <% end %>
      <br>
      紹介文
      <%= @user.introduction %>
      <br>
      <%= link_to "プロフィール編集", edit_user_path(@user), class:"btn btn-info mt-5" %>
      <br>
      <%= link_to "いいねした本一覧", favorites_path(@user.id), class:"btn btn-secondary my-5" %>
    </div>
    <div class="col-lg-8 text-center">
      <div id='calendar',></div>
    </div>
    <div class="col-lg-2 text-center">
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>book_image</th>
            <th>book_title</th>
            <th>book_tag</th>
          </tr>
        </thead>
        <tbody>
          <% @books.first(5).each do |book| %>
            <tr>
              <td>
                <%= image_tag book.get_profile_image, size:'50x50' %>
              </td>
              <td>
                <%= link_to book.title, book_path(book) %>
              </td>
              <td>
                <% book.tags.each do |tag| %>
                  <%= link_to search_tag_path(tag_id: tag.id) do %>
                  <%= tag.name %><br>
                  <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
        <caption class="ml-5">
          <i class="fa-solid fa-arrow-up"></i>
            当サイトのおすすめです！
          <i class="fa-solid fa-arrow-up"></i>
        </caption>
      </table>
    </div>

  </div>
</div>