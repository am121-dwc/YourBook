<div class="container mt-5">
  <!--ユーザー情報表示部分-->
  <div class="row">
    <div class="col-lg-3 col-md-3">
      <% if @user.profile_image.attached? %>
        <%= image_tag @user.profile_image, size:"100x100" %>
      <% else %>
        <%= image_tag "no_image.jpg" %>
      <% end %>
    </div>
    <div class="col-lg-9 col-md-9 d-flex align-items-center justify-content-center">
      <h1><%= @user.name %>さんのマイページ</h1>
    </div>
  </div>
  <div>
    <div class="mt-3">
      <%= link_to "プロフィール編集", edit_user_path(@user), class:"btn btn-info" %>
    </div>
    <div class="mt-3">
      <%= link_to "いいねした本一覧", favorites_path, class:"btn btn-secondary" %>
    </div>
  </div>
</div>
<div class="container-fluid">
  <div class="row mt-5">
    <div class="col-lg-3 mt-5">
      <!--新着の本-->
      <h2 class="text-center">New</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>book_image</th>
            <th>book_title</th>
            <th>book_tag</th>
          </tr>
        </thead>
        <tbody>
          <% @new_books.first(5).each do |book| %>
            <tr>
              <td>
                <%= image_tag book.get_profile_image, size:'50x50' %>
              </td>
              <td>
                <%= link_to book.title, book_path(book) %>
              </td>
              <td>
                <% book.tags.each do |tag| %>
                  <%= link_to search_tag_path(tag_id: tag.id) do %>
                  <%= tag.name %><br>
                  <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
        <caption class="ml-5">
          <i class="fa-solid fa-arrow-up"></i>
            新着の本です！
          <i class="fa-solid fa-arrow-up"></i>
        </caption>
      </table>
    </div>
    <div class="col-lg-6 text-center">
      <div id='calendar'></div>
    </div>
    <div class="col-lg-3 mt-5 text-center">
      <h2 class="text-center">Popular</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>book_image</th>
            <th>book_title</th>
            <th>book_tag</th>
          </tr>
        </thead>
        <tbody>
          <% @books.first(5).each do |book| %>
            <tr>
              <td>
                <%= image_tag book.get_profile_image, size:'50x50' %>
              </td>
              <td>
                <%= link_to book.title, book_path(book) %>
              </td>
              <td>
                <% book.tags.each do |tag| %>
                  <%= link_to search_tag_path(tag_id: tag.id) do %>
                  <%= tag.name %><br>
                  <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
        <caption class="ml-5">
          <i class="fa-solid fa-arrow-up"></i>
            当サイトのおすすめです！
          <i class="fa-solid fa-arrow-up"></i>
        </caption>
      </table>
    </div>

  </div>
</div>