<% if @model == 'user' %>
<h2>
  Users search for "<%= @content %>"
</h2>
  <table class='table'>
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @records.each do |record| %>
        <tr>
          <td><%= image_tag record.profile_image, size: '50x50' %></td>
          <td><%= record.name %></td>
          <td><%= link_to 'Show', record %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% elsif @model == 'book' %>
<h2>
  Books search for "<%= @content %>"
</h2>
  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @records.each do |record| %>
        <tr>
          <td><%= link_to (record.user) do %>
            <%= image_tag record.user.get_profile_image, size:'50x50' %>
            <% end %>
          </td>
          <td><%= link_to record.title,record %></td>
          <td><%= record.introduction %></td>
          <td id="favorite_btn_<%= record.id %>">
           <%= render "favorites/favorite-btn", book: record %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% end %>