<div class="container ml-5 mt-5">
  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th>image</th>
        <th>title</th>
        <th>introduction</th>
        <% if admin_signed_in? %>
          <th>削除する</th>
        <% else %>
          <th>good</th>
        <% end %>
        <th><!--本の作成者なら削除ボタンを表示するスペース--></th>
      </tr>

    </thead>
    <tbody>
      <% books.each do |book| %>
        <tr>
          <% if admin_signed_in? %>
          <td>
            <%= image_tag book.get_profile_image, size:'50x50' %>
          </td>
          <% else %>
          <td>
            <%= link_to (book.user) do %>
            <%= image_tag book.get_profile_image, size:'50x50' %>
            <% end %>
          </td>
          <% end %>
          <% if admin_signed_in? %>
            <td><%=  book.title %></td>
          <% else %>
            <td><%= link_to book.title,book %></td>
          <% end %>
          <td><%= book.introduction %></td>
          <% if admin_signed_in? %>
            <!--処理なし-->
          <% else %>
            <td id="favorite_btn_<%= book.id %>">
              <%= render "favorites/favorite-btn", book: book %>
            </td>
          <% end %>
          <td>
            <!--本は管理者のみ削除可能-->
            <% if admin_signed_in? %>
              <%= link_to "削除する", admin_book_path(book), method: :delete, data: { confirm: 'この本を削除しますか？' }, class:"btn btn-danger" %>
            <% elsif book.user_id = current_user.id%>
              <%= link_to "削除する", book_path(book), method: :delete, data: { confirm: 'この本を削除しますか？' }, class:"btn btn-danger" %>
            <% else %>
              <p><!--表示無し--></p>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>