<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>Profile</th>
      <th>Name</th>
      <th>Comment</th>
      <th>Good</th>
    </tr>
  </thead>
  <tbody>
    <% book.book_comments.each do |book_comment| %>
      <tr>
        <td>
          <%= image_tag book.user.get_profile_image, size:'50x50' %>
        </td>
        <td><%= book_comment.user.name %></td>
        <td><%= book_comment.comment %></td>
        <td id="favorite_btn_<%= book_comment.id %>">
          <%= render "book_comments/comment/favorite-btn", book_comment: book_comment %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>