<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>name</th>
      <th>削除する</th>
    </tr>
  </thead>
  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td>
          <%= tag.name %>
        </td>
        <td>
          <%= link_to "削除する", tag_path(tag), method: :delete, data: { confirm: 'このタグを削除しますか？' }, class:"btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>